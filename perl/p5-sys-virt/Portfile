PortSystem          1.0
PortGroup           perl5 1.0

perl5.branches      5.24
perl5.setup         Sys-Virt 2.4.0

license             LGPL-2.1+
platforms           darwin
maintainers         nomaintainer

description         Libvirt - The Virtualization API

long_description    This is the Perl binding for libvirt.

checksums           rmd160  079ce02d32554ec3097fe76875317d90ac6b5c77 \
                    sha256  c441e805d21207791998833b12adae0dbf15bb34cc6e40445c8fbc52c79db03b

# Depend on various Perl ports, plus libvirt itself
depends_lib-append  port:libvirt
if {${perl5.major} != ""} {
depends_lib-append  port:p${perl5.major}-xml-xpath \
                    port:p${perl5.major}-cpan-changes
}

# This module breaks if parallel build is used!
use_parallel_build  no
