+# DESTDIR is meant to be overridden by Macports, but set a sane default.
+DESTDIR=/usr/local
+
+# A simple "build" target: Just create a file
+all: marker.txt
+
+marker.txt:
+	echo 'Hello' > marker.txt
+
+# The important part: Create a directory and copy files
+install: all
+	test -d ${DESTDIR}/lib/guestfs \
+		|| mkdir -p ${DESTDIR}/lib/guestfs
+	cp initrd kernel README.fixed root \
+		${DESTDIR}/lib/guestfs/
